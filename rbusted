#!/usr/bin/env resty

-- remove openresty write guard on _G
setmetatable(_G, nil)

package.path = "?/init.lua;"..package.path

if ngx ~= nil then
  ngx.exit = function() end
end

-- disable globals warning
setmetatable(_G, nil)

-- Busted command-line runner
require 'busted.runner'({ standalone = false })
